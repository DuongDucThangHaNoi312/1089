{% extends 'base.html.twig' %}

{% block title %}CityGovJobs - Contact Us{% endblock %}
{% block meta_description %}Comments/Questions? Your feedback is important to us! Feel free to report any broken hyperlinks to us or any other concerns you might have.{% endblock %}

{% block body_master_row_class %}{% endblock %}
{% block body_master_column_class %}{% endblock %}

{% block body_main %}

    <div class="row bg-white p-0 p-md-5">
        <div class="col-12">
            <section class="section section-text mb-3">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        {{ include('cms_block/_cms_block.html.twig', { 'slug': 'contact-form' }) }}
                    </div>
                </div>
            </section>
            <section class="section section-contact" id="section-contact">
                <div class="modal modal--show modal-contact-form">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            {{ form_start(contactForm, {attr: {class: 'form-contact', novalidate: 'novalidate'} }) }}
                            <div class="modal-header">
                                <h5 class="modal-title">Contact Us</h5>
                            </div>
                            <div class="modal-body">
                                <div class="form-row">
                                    <div class="col">
                                        {{ form_row(contactForm.name) }}
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        {{ form_row(contactForm.email) }}
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        {{ form_row(contactForm.phone) }}
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        {{ form_row(contactForm.subject) }}
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        {{ form_row(contactForm.message) }}
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                {{ form_widget(contactForm.submit) }}
                            </div>
                            {{ form_end(contactForm) }}
                        </div>
                    </div>
                </div>
            </section>
            <section class="section section-text mb-3 mt-3">
                <div class="row justify-content-center text-center contact-form-footer">
                    <div class="col-md-6">
                        <p>You may also write to us at:</p>
                        <p>CityGovtJobs.com LLC<br/>912 N. Prospero Dr.<br/>Covina, CA 91722</p>
                    </div>
                </div>
            </section>
        </div>
    </div>

{% endblock %}
