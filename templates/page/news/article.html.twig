{% extends 'base.html.twig' %}

{% block title %}CityGovJobs: {{ article.headline }}{% endblock %}
{% block meta_description %}{{ article.content[:200]|striptags}}{% endblock %}


{% block body_master_row_class %}{% endblock %}
{% block body_master_column_class %}{% endblock %}

{% block body_top %}
    <div class="row bg-white justify-content-center">
        <div class="mt-4 mb-1 container">
            <a class="btn btn-link" href="{{ path('news') }}"><i class="fa fa-chevron-left"></i> Back to News</a>
        </div>
    </div>
{% endblock %}

{% block body_main %}
    <div class="container mt-4 bg-white mb-5">
        <div class="m-4 p-4 bg-white">
            <div class="row bg-white py-3">
                <div class="col-12">
                    <p class="text-muted">{{ article.createdAt| date("m/d/Y H:i A T", "America/Los_Angeles")}}</p>
                    <h1>{{ article.headline }}</h1>
                    {{ article.content|raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}