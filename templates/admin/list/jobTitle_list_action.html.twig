{% extends get_admin_template('base_list_field', admin.code) %}

{% block field %}
    <div class="btn-group">
        {% if object.deletedAt and admin.hasAccess('edit', object) %}
            <a href="{{ admin.generateObjectUrl('undelete', object) }}" class="btn btn-sm btn-default">
                <i class="fa fa-trash" aria-hidden="true"></i>
                Undelete
            </a>
        {% else %}
            {% for actions in field_description.options.actions %}
                {% include actions.template %}
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
