{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-md-12 pt-5 text-center">
        <h1>Reset your password</h1>
        <p>Enter the email address or username you used to sign up.</p>
    </div>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
            <div class="form-group">
                <label for="username">{{ 'resetting.request.username'|trans }}</label>
                <input type="text" id="username" class="form-control" name="username" required="required" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-lg btn-outline-primary mt-5 btn-block btn-reset-password" value="{{ 'resetting.request.submit'|trans }}" />
            </div>
        </form>
    </div>
</div>
