{% extends 'base.html.twig' %}

{% block title %}CityGovJobs City Registration Step Two{% endblock %}

{% block body_master_container_class %}container{% endblock %}
{% block body_master_row_class %}bg-white px-5 my-5 justify-content-center{% endblock %}
{% block body_master_column_class %}container px-5 py-5 px-xs-2 {% endblock %}

{% block body_main %}
    <div class="row">
        <div class="col-md-12 pt-5 text-center">
            {{ include('cms_block/_cms_block.html.twig', { 'slug': 'city-user-registration-step-two-top' }) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            {{ form_start(form) }}
            {{ form_row(form.firstName) }}
            {{ form_row(form.lastName) }}
            {{ form_row(form.jobTitle) }}
            {{ form_row(form.department) }}
            {{ form_row(form.phone) }}
            <div class="form-group">
                <div class="form-check">
                    <input type="checkbox" id="step_two_agreeTermsOfUseAgreement" name="step_two[agreeTermsOfUseAgreement]" required="required" class="form-check-input">
                    <label class="form-check-label required" for="step_two_agreeTermsOfUseAgreement"> I agree to the <a target="_blank" href="{{ path('terms_of_use') }}">Terms of Use Agreement.</a></label>
                </div>
            </div>
            {{ form_row(form._token) }}
            {{ form_row(form.next) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}
